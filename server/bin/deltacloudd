#!/bin/bash

usage()
{
cat << EOF
usage: $0 options

Deltacloud API

OPTIONS:
   -h                Show this message
   -i <driver>       Use driver
   -r <hostname>     Server hostname (default: localhost)
   -p <port>         Server port (default: 3000)
EOF
}

[ "$API_PORT" == "" ] && API_PORT='3000'
[ "$API_HOST" == "" ] && API_HOST='localhost'

API_DRIVER=

while getopts "hr:p:i:" OPTION
do
     case $OPTION in
         h)
             usage
             exit 1
             ;;
         i)
             API_DRIVER=$OPTARG
             ;;
         r)
             API_HOST=$OPTARG
             ;;
         p)
             API_PORT=$OPTARG
             ;;
         ?)
             usage
             exit
             ;;
     esac
done

if [[ -z $API_DRIVER ]]
then
  echo "empty"
  usage
  exit 1
fi

topdir=$(cd $(dirname $0)/.. && pwd)
rerun=$(which rerun 2>/dev/null)

if [ -z "$rerun" ]; then
  echo "Can not find 'rerun' (gem install rerun)"
  exit 1
fi

[ -z "$RACK_ENV" ] && RACK_ENV=development

export API_DRIVER
export API_HOST
export API_PORT

echo "Starting Deltacloud API :: '$API_DRIVER' driver :: http://$API_HOST:$API_PORT/api"

rerun "thin start --debug --port=$API_PORT --address=$API_HOST -e $RACK_ENV -c '$topdir' -R config.ru"
